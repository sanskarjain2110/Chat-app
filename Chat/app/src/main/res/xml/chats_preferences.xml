    <PreferenceCategory android:title="Keyboard">
        <SwitchPreference
            android:defaultValue="false"
            android:key="use_system_emoji"
            android:title="Use system emoji" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="enter_key_send"
            android:title="Enter key send" />
