        <SwitchPreference
            android:defaultValue="false"
            android:key="link_preview"
            android:summary="Retrieve link preview directly from website for messages you send"
            android:title="Generate link preview" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="address_book_photos"
            android:summary="Display contact photos from your address book if available"
            android:title="Use address book photos" />
